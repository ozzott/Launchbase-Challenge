{% extends "layout.njk" %}

{% block head %}

<title> Cursos Rocketseat </title>
                      
 <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">     
 <link rel="icon" href="favicon.ico" type="image/x-icon">

{% endblock %}

{% block content %}
        <div class="title"> <h1>Cursos</h1> </div>
        <div class="cards">
            {% for item in items %}

                <div class="card" id="{{item.id}}">
                    <div class="image-container">
                        <img src="{{item.course_url}}" alt="{{item.id}}">
                        <h3>{{ item.title }}</h3>
                    </div>
                    <div class="curse_content">
                        <p class="curse_modules">{{ item.modules }}</p>
                        <p class="curse_price">{{ item.price }}</p>
                    </div>
                </div>

            {% endfor %}
        </div>    

    <script src="scripts.js"></script>  

{% endblock %}

